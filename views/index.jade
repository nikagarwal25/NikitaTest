extends layout
block content
    h1 #{title}
    br

    form(action="/completetask", method="post")
      table.table.table-striped.table-bordered
        tr
          td CorrelationId
          td ProcessId
          td Date
          td Select
        if (typeof tasks === "undefined")
          tr
            td
        else
          each task in tasks
            tr
              td #{task.CorrelationId}
              td #{task.ProcessId}
              - var date  = task.CreatedDateTime / 10000;
              - var day   =  Math.abs(new Date(0, 0, 1).setFullYear(1));
              - var month =new Date(date - day);
              td #{month}
              td
                input(type="checkbox", name="#{task.id}", value="#{!task.completed}", checked=task.completed)
      button.btn.btn-primary(type="submit") Update tasks
    hr
    form.well(action="/findJSONPath", method="get")
      table.table.table-striped.table-bordered
        tr
          td Pallet Count
        if (typeof payloadvalues === "undefined")
          tr
            td NoValue
        else
          each valuePayload in payloadvalues
            tr
              td #{valuePayload.CorrelationId}

              